@page
@model SnowReport.Pages.Addresses.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>
@if (Model.SnowTotals != null)
{


    <div>

        <h4>SnowTotals</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.SnowTotals.MountainName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SnowTotals.MountainName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.SnowTotals.NewSnow)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SnowTotals.NewSnow)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.SnowTotals.City)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SnowTotals.City)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.SnowTotals.State)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SnowTotals.State)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.SnowTotals.MountainName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SnowTotals.MountainName)
            </dd>
        </dl>
    </div>
}
else
{
    <p>No snow reports</p>
}

<div>
    <a asp-page="./Edit" asp-route-id="@Model.SnowTotals?.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>

