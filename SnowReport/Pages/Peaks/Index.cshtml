@page
@model SnowReport.Pages.Addresses.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}

<body>


  <h1>Index</h1>

  <p>
    <a asp-page="Create">Create New</a>
  </p>
  <table class="table">
    <thead>
      <tr>
        <th>
          @Html.DisplayNameFor(model => model.SnowTotals[0].MountainName)
        </th>
        <th>
          @Html.DisplayNameFor(model => model.SnowTotals[0].NewSnow)
        </th>
        <th>
          @Html.DisplayNameFor(model => model.SnowTotals[0].City)
        </th>
        <th>
          @Html.DisplayNameFor(model => model.SnowTotals[0].State)
        </th>
        <th></th>
      </tr>
    </thead>
    <tbody>
@foreach (var item in Model.SnowTotals) {
      <tr>
        <td>
          @Html.DisplayFor(modelItem => item.MountainName)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.NewSnow)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.City)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.State)
        </td>
        <td>
          <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
          <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
          <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
        </td>
      </tr>
}
    </tbody>
  </table>
</body>